            <meta name="author" content="">
        {% endblock %}

        {% block title %}Vota!{% endblock %}

        {% block stylesheets %}
            <!-- JQuery -->
            <script src="{{asset('template/freelancer/js/jquery-3.3.1.min.js') }}"></script>

            <!-- Bootstrap core CSS -->
            <!-- <link href="{{asset('template/freelancer/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"> -->

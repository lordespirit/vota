            <!-- Custom styles for this template -->
            <link href="{{asset('template/freelancer/css/freelancer.css') }}" rel="stylesheet">
			<link href="{{asset('template/freelancer/css/vota.css') }}" rel="stylesheet">
        {% endblock %}

{% block bodyAtt %} id="page-top class="index" {% endblock %}
 {% block body %}

    <!-- Menu -->
    <div id="nav-login">			
	{{ include('login.html.twig') }}
	</div>

    <!-- menu -->

    <!-- Portfolio Grid Section -->
    <section class="portfolio" id="portfolio">
      <div class="container">
		  
<!-- Si no hi ha autenticació, es mostrarà els destacats -->		  
{% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

	{{ include('destacats.html.twig') }}
	
<!-- Si està autenticat, aleshores evualuarà si es usuari o administrador per a mostrar el seu contingut -->	
{% else %}	  
	 
	<!-- Si es usauri normal, carrega el twig d'usuaris -->
	{% if is_granted('ROLE_USER') %} 
	
		{{ include('usuaris.html.twig') }}
	  
	<!-- Si no es usuari, evalua si es administrador per a mostrar el twig d'administrador -->
	{% elseif  is_granted('ROLE_ADMIN') %} 
	
		{{ include('admin.html.twig') }}
		  
	{% endif %}
	
{% endif %}

      </div>
    </section>
	
{% endblock %}
{% block javascripts %}
    <!-- Bootstrap core JavaScript -->
    <script src="{{asset('template/freelancer/vendor/jquery/jquery.min.js') }}"></script>
